<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MonolithicFragment">

    <fragment
        android:id="@+id/MonolithicFragment"
        android:name="com.example.smartlight.monolithic.MonolithicFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_smart_light">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/MviFragment" />
    </fragment>
    <fragment
        android:id="@+id/MvvmFragment"
        android:name="com.example.smartlight.mvvm.MvvmFragment"
        android:label="@string/mvvm_fragment_label"
        tools:layout="@layout/fragment_mvi">

    </fragment>

    <fragment
        android:id="@+id/MviFragment"
        android:name="com.example.smartlight.mvi.MviFragment"
        android:label="@string/mvi_fragment_label"
        tools:layout="@layout/fragment_mvi">

    </fragment>

</navigation>